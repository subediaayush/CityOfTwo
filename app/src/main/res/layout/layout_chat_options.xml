<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:divider="@drawable/divider_grey"
	android:orientation="vertical"
	android:showDividers="middle"
	>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:divider="@drawable/divider_grey"
		android:orientation="horizontal"
		android:showDividers="middle"
		>

		<Button
			style="@style/ProfileOptionButtons"
			android:drawableTop="@drawable/ic_send_new_message"
			android:text="Send Message"
			/>

		<Button
			style="@style/ProfileOptionButtons"
			android:drawableTop="@drawable/ic_send_request"
			android:text="Save as Contact"
			/>

		<Button
			style="@style/ProfileOptionButtons"
			android:drawableTop="@drawable/ic_self_reveal"
			android:text="Reveal"
			/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:divider="@drawable/divider_grey"
		android:showDividers="middle"
		>

		<Button
			style="@style/ProfileOptionButtons"
			android:drawableTop="@drawable/ic_facebook"
			android:text="Facebook"
			/>

		<Button
			style="@style/ProfileOptionButtons"
			android:drawableTop="@drawable/ic_likes"
			android:text="Common Likes"
			/>

		<Button
			style="@style/ProfileOptionButtons"
			android:drawableTop="@drawable/ic_block"
			android:text="Block User"
			/>
	</LinearLayout>
</LinearLayout>
