<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <com.messenger.cityoftwo.TriangleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:shape_color="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/coyrudy_logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/mipmap_1" />

            <com.messenger.cityoftwo.FontTextView
                android:id="@+id/coyrudy_label"
                style="@android:style/TextAppearance.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CoyRudy"
                android:textColor="@color/white" />

        </LinearLayout>

        <Button
            android:id="@+id/get_started_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started!" />
    </LinearLayout>
</RelativeLayout>