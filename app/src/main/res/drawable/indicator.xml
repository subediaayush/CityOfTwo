<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1.5dp"
        android:right="1dp"
        android:top="1.5dp">
        <shape android:shape="oval">
            <gradient
                android:centerColor="#f000"
                android:centerX=".5"
                android:centerY=".5"
                android:endColor="#0000"
                android:gradientRadius="4.25dp"
                android:type="radial" />
            <size
                android:width="8dp"
                android:height="8dp" />
        </shape>
    </item>
    <item
        android:bottom="1.5dp"
        android:left="1.5dp"
        android:right="1.5dp"
        android:top="1.5dp">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary"/>
            <size
                android:width="8dp"
                android:height="8dp" />
        </shape>
    </item>
</layer-list>