<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp"/>
            <corners android:bottomRightRadius="2px" android:radius="15dp" />
            <solid android:color="@color/LightSteelBlue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding android:bottom="7dp" android:left="10dp" android:right="10dp" android:top="7dp"/>
            <corners android:bottomRightRadius="2px" android:radius="15dp" />
            <solid android:color="@color/Gainsboro" />
        </shape>
    </item>
</selector>