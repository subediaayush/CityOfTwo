<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="#5000" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
                    <corners android:radius="5dp" />
                    <solid android:color="@color/colorSentBackground" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <solid android:color="#5000" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp">
                <shape android:shape="rectangle">
                    <padding android:bottom="12dp" android:left="12dp" android:right="12dp" android:top="12dp" />
                    <corners android:radius="5dp" />
                    <solid android:color="@color/colorMessagePressed" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>